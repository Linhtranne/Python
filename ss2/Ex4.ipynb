    "if n <= 1:\n",
    "    print(\"Số không hợp lệ, vui lòng nhập số nguyên dương\")\n",
    "else:\n",
    "\n",
    "    sum = 0\n",
    "    for i in range(1, n + 1):\n",
    "        sum += i\n",
    "    print(\"Tổng từ 1 đến\", n, \"là:\", sum)\n"
   ]
