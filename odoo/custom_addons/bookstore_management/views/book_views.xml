<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_book_tree" model="ir.ui.view">
        <field name="name">bookstore.book.tree</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="author"/>
                <field name="price"/>
                <field name="publish_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">bookstore.book.form</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="title"/>
                            <field name="author"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="publish_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">bookstore.book</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
