<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.management.tree</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="school_id"/>
                <field name="score"/>
                <field name="average_score"/>
                <field name="exam_count"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.management.form</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_update_student" string="Update Student" type="object" class="btn-secondary"/>
                    <button name="action_calculate_average" string="Calculate Average" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_exams" type="object" class="oe_stat_button" icon="fa-book">
                            <field name="exam_count" widget="statinfo" string="Exams"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="school_id"/>
                        </group>
                        <group>
                            <field name="score"/>
                            <field name="average_score" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Exams">
                            <field name="exam_ids">
                                <tree>
                                    <field name="subject"/>
                                    <field name="exam_date"/>
                                    <field name="score"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
