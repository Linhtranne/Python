<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_exam_tree" model="ir.ui.view">
        <field name="name">exam.management.tree</field>
        <field name="model">exam.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="subject"/>
                <field name="exam_date"/>
                <field name="school_id"/>
                <field name="student_count"/>
                <field name="score"/>
                <field name="average_exam_score"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_exam_form" model="ir.ui.view">
        <field name="name">exam.management.form</field>
        <field name="model">exam.management</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_calculate_exam_average" string="Calculate Exam Average" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_students" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="student_count" widget="statinfo" string="Students"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="subject"/>
                            <field name="exam_date"/>
                            <field name="school_id"/>
                        </group>
                        <group>
                            <field name="score"/>
                            <field name="average_exam_score" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Students">
                            <field name="students">
                                <tree>
                                    <field name="name"/>
                                    <field name="age"/>
                                    <field name="score"/>
                                    <field name="average_score"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_exam" model="ir.actions.act_window">
        <field name="name">Exams</field>
        <field name="res_model">exam.management</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
