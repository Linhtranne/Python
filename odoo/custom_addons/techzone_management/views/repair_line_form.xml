<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Minimal form for repair.line used in popup; hides order_id -->
    <record id="view_repair_line_form_custom" model="ir.ui.view">
        <field name="name">repair.line.form.custom</field>
        <field name="model">repair.line</field>
        <field name="arch" type="xml">
            <form string="Chi tiết vật tư/công" create="false">
                <group>
                    <field name="display_type" invisible="1"/>
                    <field name="product_id"/>
                    <field name="product_uom_qty"/>
                    <field name="price_unit"/>
                    <field name="price_subtotal" readonly="1"/>
                    <field name="order_id" invisible="1" readonly="1"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
