<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Repair Appointment Tree View -->
    <record id="view_repair_appointment_tree" model="ir.ui.view">
        <field name="name">repair.appointment.tree</field>
        <field name="model">repair.appointment</field>
        <field name="arch" type="xml">
            <tree string="Lịch hẹn">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="device_id"/>
                <field name="appointment_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Repair Appointment Form View -->
    <record id="view_repair_appointment_form" model="ir.ui.view">
        <field name="name">repair.appointment.form</field>
        <field name="model">repair.appointment</field>
        <field name="arch" type="xml">
            <form string="Lịch hẹn">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="scheduled,confirmed,completed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="device_id"/>
                        </group>
                        <group>
                            <field name="appointment_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" placeholder="Mô tả lỗi sơ bộ..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Repair Appointment Calendar View -->
    <record id="view_repair_appointment_calendar" model="ir.ui.view">
        <field name="name">repair.appointment.calendar</field>
        <field name="model">repair.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Lịch hẹn" date_start="appointment_date" color="partner_id">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="device_id"/>
            </calendar>
        </field>
    </record>

    <!-- Repair Appointment Action -->
    <record id="action_repair_appointment" model="ir.actions.act_window">
        <field name="name">Lịch hẹn</field>
        <field name="res_model">repair.appointment</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo lịch hẹn mới
            </p>
        </field>
    </record>

</odoo>
