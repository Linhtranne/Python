<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Repair Order Tree View -->
    <record id="view_repair_order_tree" model="ir.ui.view">
        <field name="name">repair.order.tree</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <tree string="Phiếu sửa chữa" decoration-info="state == 'draft'" 
                  decoration-warning="state == 'diagnose' or state == 'quoted'"
                  decoration-success="state == 'done' or state == 'returned'"
                  decoration-danger="state == 'in_progress'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="device_id"/>
                <field name="date_receipt"/>
                <field name="deadline"/>
                <field name="amount_total"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Repair Order Search View -->
    <record id="view_repair_order_search" model="ir.ui.view">
        <field name="name">repair.order.search</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm Phiếu sửa chữa">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="device_id"/>
                <field name="technician_id"/>
                <filter string="Phiếu quá hạn" name="overdue" 
                        domain="[('deadline', '&lt;', context_today().strftime('%Y-%m-%d')), ('state', '!=', 'returned')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Kỹ thuật viên" name="group_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Hãng" name="group_brand" context="{'group_by': 'brand_id'}"/>
                    <filter string="Tháng" name="group_month" context="{'group_by': 'date_receipt:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Repair Order Pivot View -->
    <record id="view_repair_order_pivot" model="ir.ui.view">
        <field name="name">repair.order.pivot</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <pivot string="Báo cáo Doanh thu">
                <field name="date_receipt" type="row" interval="month"/>
                <field name="brand_id" type="col"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Repair Order Graph View (Bar Chart) -->
    <record id="view_repair_order_graph" model="ir.ui.view">
        <field name="name">repair.order.graph</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <graph string="Số lượng phiếu theo Hãng" type="bar">
                <field name="brand_id" type="row"/>
                <field name="id" type="measure" operator="count" string="Số lượng"/>
            </graph>
        </field>
    </record>

    <!-- Repair Line Pie Chart -->
    <record id="view_repair_line_pie" model="ir.ui.view">
        <field name="name">repair.line.pie</field>
        <field name="model">repair.line</field>
        <field name="arch" type="xml">
            <graph string="Doanh thu Linh kiện vs Công" type="pie">
                <field name="is_repair_part" type="row"/>
                <field name="price_subtotal" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Main Action for Repair Orders -->
    <record id="action_repair_order" model="ir.actions.act_window">
        <field name="name">Phiếu sửa chữa</field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">tree,form,kanban,graph,pivot</field>
        <field name="search_view_id" ref="view_repair_order_search"/>
    </record>

    <!-- Action for Pie Chart -->
    <record id="action_repair_line_pie" model="ir.actions.act_window">
        <field name="name">Tỉ trọng doanh thu</field>
        <field name="res_model">repair.line</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_repair_line_pie"/>
    </record>
</odoo>