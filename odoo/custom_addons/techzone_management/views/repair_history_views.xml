<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Repair History Tree View -->
    <record id="view_repair_history_tree" model="ir.ui.view">
        <field name="name">repair.history.tree</field>
        <field name="model">repair.history</field>
        <field name="arch" type="xml">
            <tree string="Lịch sử sự cố">
                <field name="date_log"/>
                <field name="device_id"/>
                <field name="issue_description"/>
                <field name="technician_id"/>
            </tree>
        </field>
    </record>

    <!-- Repair History Form View -->
    <record id="view_repair_history_form" model="ir.ui.view">
        <field name="name">repair.history.form</field>
        <field name="model">repair.history</field>
        <field name="arch" type="xml">
            <form string="Lịch sử sự cố">
                <sheet>
                    <group>
                        <group>
                            <field name="device_id"/>
                            <field name="order_id"/>
                            <field name="date_log"/>
                            <field name="technician_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="issue_description" placeholder="Mô tả chi tiết về lỗi..."/>
                        <field name="diagnosis_result" placeholder="Kết quả kiểm tra..."/>
                    </group>
                    <group>
                        <field name="image_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
