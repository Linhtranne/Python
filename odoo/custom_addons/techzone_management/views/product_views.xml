<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Form View -->
    <record id="view_product_template_form_inherit_repair" model="ir.ui.view">
        <field name="name">product.template.form.inherit.repair</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_ok']" position="after">
                <field name="is_repair_part" string="Là linh kiện sửa chữa"/>
            </xpath>
        </field>
    </record>


    <!-- Action for Repair Parts -->
    <record id="action_repair_parts" model="ir.actions.act_window">
        <field name="name">Linh kiện Sửa chữa</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('is_repair_part', '=', True)]</field>
        <field name="context">{'default_is_repair_part': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo linh kiện hoặc dịch vụ sửa chữa mới.
            </p>
        </field>
    </record>

</odoo>
