<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groups -->
    <record id="group_repair_technician" model="res.groups">
        <field name="name">Kỹ thuật viên</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="comment">Kỹ thuật viên có thể xem và sửa phiếu được giao</field>
    </record>

    <record id="group_repair_manager" model="res.groups">
        <field name="name">Quản lý Sửa chữa</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="comment">Quản lý có toàn quyền quản lý hệ thống sửa chữa</field>
        <field name="implied_ids" eval="[(4, ref('group_repair_technician'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="repair_order_technician_rule" model="ir.rule">
        <field name="name">Kỹ thuật viên: Chỉ thấy phiếu được giao</field>
        <field name="model_id" ref="model_repair_order"/>
        <field name="domain_force">['|', ('technician_id', '=', user.id), ('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_repair_technician'))]"/>
    </record>

    <record id="repair_order_manager_rule" model="ir.rule">
        <field name="name">Quản lý: Thấy tất cả phiếu</field>
        <field name="model_id" ref="model_repair_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_repair_manager'))]"/>
    </record>

</odoo>
