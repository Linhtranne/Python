<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Training Course Tree View -->
    <record id="view_training_course_tree" model="ir.ui.view">
        <field name="name">training.course.tree</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="duration"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Training Course Form View -->
    <record id="view_training_course_form" model="ir.ui.view">
        <field name="name">training.course.form</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="duration"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Training Course Action -->
    <record id="action_training_course" model="ir.actions.act_window">
        <field name="name">Training Courses</field>
        <field name="res_model">training.course</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Training Course
            </p>
            <p>
                Add courses to manage in the system.
            </p>
        </field>
    </record>

</odoo>
