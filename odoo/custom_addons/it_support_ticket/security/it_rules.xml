<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Lớp 3: Luật phân dòng (Record Rules) -->
    <!-- Rules chỉ quyết định XEM DÒNG NÀO. Quyền read/write/create/unlink đã được xử lý ở CSV -->
    
    <!-- Reporter: Chỉ thấy phiếu của mình -->
    <record id="it_ticket_reporter_rule" model="ir.rule">
        <field name="name">Reporter: Own Tickets Only</field>
        <field name="model_id" ref="model_it_ticket"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_it_reporter'))]"/>
    </record>

    <!-- Technician: Thấy tất cả phiếu -->
    <record id="it_ticket_technician_rule" model="ir.rule">
        <field name="name">Technician: All Tickets</field>
        <field name="model_id" ref="model_it_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_it_technician'))]"/>
    </record>

    <!-- Manager: Thấy tất cả phiếu -->
    <record id="it_ticket_manager_rule" model="ir.rule">
        <field name="name">Manager: All Tickets</field>
        <field name="model_id" ref="model_it_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_it_manager'))]"/>
    </record>
</odoo>
